<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de árbol para suscripciones -->
    <record id="view_convive_subscription_tree" model="ir.ui.view">
        <field name="name">convive.subscription.tree</field>
        <field name="model">convive.subscription</field>
        <field name="arch" type="xml">
            <tree string="Planes de Suscripción">
                <field name="name"/>
                <field name="price" widget="monetary"/>
                <field name="duration_days"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para suscripciones -->
    <record id="view_convive_subscription_form" model="ir.ui.view">
        <field name="name">convive.subscription.form</field>
        <field name="model">convive.subscription</field>
        <field name="arch" type="xml">
            <form string="Plan de Suscripción">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_convive_user_subscription_by_plan)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-users">
                            <field name="subscriber_count" widget="statinfo" string="Suscriptores"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactivo" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre del Plan (ej: Premium)"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="price" widget="monetary"/>
                            <field name="duration_days"/>
                            <field name="active"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="description" placeholder="Descripción detallada del plan..."/>
                        </page>
                        <page string="Características">
                            <field name="features" placeholder="Lista de características del plan..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda para suscripciones -->
    <record id="view_convive_subscription_search" model="ir.ui.view">
        <field name="name">convive.subscription.search</field>
        <field name="model">convive.subscription</field>
        <field name="arch" type="xml">
            <search string="Buscar Planes">
                <field name="name"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para suscripciones -->
    <record id="action_convive_subscription" model="ir.actions.act_window">
        <field name="name">Planes de Suscripción</field>
        <field name="res_model">convive.subscription</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo plan de suscripción
            </p>
            <p>
                Define los planes de suscripción disponibles para los usuarios de ConVive.
            </p>
        </field>
    </record>

</odoo>
